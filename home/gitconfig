[core]
  excludesfile = ~/.gitignore
  pager = delta --plus-emph-color="#555628" --plus-color="#3b3c28" --minus-emph-color="#70342f" --minus-color="#4a2c2c" --theme='gruvbox.sepia'
[color "status"]
	added = yellow
	changed = magenta
	untracked = cyan
[diff]
  compactionHeuristic = true
[difftool "vimdiff"]
  cmd = $EDITOR -d $LOCAL $REMOTE
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[gpg]
  program = gpg
[interactive]
  diffFilter = delta --color-only
[mailmap]
	file = /Users/geophyle/dev/synbioz/.mailmap
[merge]
  tool = vimdiff
[mergetool "vimdiff"]
	cmd = $EDITOR -d $LOCAL $MERGED $BASE $REMOTE -c 'winc w' -c 'winc J' -c 'winc k' -c 'winc l' -c 'diffo' -c 'winc j' -c 'diffo'
	trustExitCode = false
[protocol]
  version = 2
[rerere]
	enabled = true
